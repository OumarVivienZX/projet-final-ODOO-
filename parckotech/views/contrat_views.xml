<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ACTION -->
    <record id="action_parckotech_contrat_service" model="ir.actions.act_window">
        <field name="name">Contrats de service</field>
        <field name="res_model">parckotech.contrat.service</field>
        <field name="view_mode">list,form,graph</field>
    </record>

    <!-- LIST VIEW -->
    <record id="view_parckotech_contrat_service_list" model="ir.ui.view">
        <field name="name">parckotech.contrat.service.list</field>
        <field name="model">parckotech.contrat.service</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Contrats de service">
                <field name="name"/>
                <field name="client_id"/>
                <field name="pack_id"/>
                <field name="state"/>
                <field name="date_debut"/>
                <field name="date_fin"/>
                <field name="frequence_facturation"/>
                <field name="tarif"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_parckotech_contrat_service_form" model="ir.ui.view">
        <field name="name">parckotech.contrat.service.form</field>
        <field name="model">parckotech.contrat.service</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Contrat de service">
                <sheet>
                    <header>
                        <!-- statusbar classique -->
                        <field name="state" widget="statusbar"
                               options="{'statusbar_visible': ['draft','active','expired']}"/>
                        <!-- boutons masqués via invisible -->
                        <button name="action_active" type="object" string="Activer"
                                invisible="state != 'draft'"/>
                        <button name="action_expire" type="object" string="Expirer"
                                invisible="state != 'active'"/>
                        <button name="action_renew" type="object" string="Renouveler"
                                invisible="state != 'expired'"/>
                        <button name="action_cancel" type="object" string="Annuler"
                                invisible="state not in ['draft','active']"/>
                    </header>
                    <group col="4">
                        <field name="name"/>
                        <field name="ref" readonly="1"/>
                        <field name="client_id"/>
                        <field name="pack_id" domain="[('client_id','=',client_id)]"/>
                        <field name="date_debut"/>
                        <field name="date_fin"/>
                        <field name="frequence_facturation"/>
                        <field name="type_tarif"/>
                        <field name="tarif"/>
                        <field name="sla_temps_reponse"/>
                        <field name="sla_temps_resolution"/>
                        <field name="renouvellement_auto"/>
                        <field name="duree_engagement"/>
                    </group>
                    <notebook>
                        <page string="Factures">
                            <field name="facture_ids"/>
                        </page>
                        <page string="Conditions">
                            <field name="conditions" nolabel="1"/>
                        </page>
                        <page string="Pièces jointes">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
