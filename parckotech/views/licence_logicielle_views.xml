<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ACTION -->
    <record id="action_parckotech_licence_logicielle" model="ir.actions.act_window">
        <field name="name">Licences</field>
        <field name="res_model">parckotech.licence.logicielle</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- LIST VIEW -->
    <record id="view_parckotech_licence_logicielle_list" model="ir.ui.view">
        <field name="name">parckotech.licence.logicielle.list</field>
        <field name="model">parckotech.licence.logicielle</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Licences">
                <field name="name"/>
                <field name="logiciel_id"/>
                <field name="client_id"/>
                <field name="type_duree"/>
                <field name="date_fin"/>
                <field name="etat" widget="statusbar"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_parckotech_licence_logicielle_form" model="ir.ui.view">
        <field name="name">parckotech.licence.logicielle.form</field>
        <field name="model">parckotech.licence.logicielle</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Licence Logicielle">
                <sheet>
                    <header>
                        <field name="etat" widget="statusbar"/>
                    </header>
                    <group col="3">
                        <field name="name"/>
                        <field name="ref" readonly="1"/>
                        <field name="logiciel_id"/>
                        <field name="pack_id" readonly="1"/>
                        <field name="client_id" readonly="1"/>
                        <field name="site_id" readonly="1"/>
                    </group>
                    <group col="3">
                        <field name="type_duree"/>
                        <field name="cout"/>
                        <field name="date_debut"/>
                        <field name="date_fin"/>
                        <field name="renouvellement_requis"/>
                    </group>
                    <notebook>
                        <page string="Détails">
                            <field name="description" nolabel="1"/>
                        </page>
                        <page string="Pièces jointes">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_parckotech_licence_logicielle_search" model="ir.ui.view">
        <field name="name">parckotech.licence.logicielle.search</field>
        <field name="model">parckotech.licence.logicielle</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Rechercher licence">
                <field name="name"/>
                <field name="logiciel_id"/>
                <field name="client_id"/>
                <filter string="Expire bientôt" name="expiring_soon"
                        domain="[('etat','=','expiring_soon')]"/>
                <filter string="Expirées" name="expired"
                        domain="[('etat','=','expired')]"/>
                <group expand="0" string="Groupes">
                    <filter string="Par logiciel" name="group_logiciel"
                            context="{'group_by':'logiciel_id'}"/>
                    <filter string="Par état" name="group_etat"
                            context="{'group_by':'etat'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
