<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ACTION -->
    <record id="action_parckotech_incident" model="ir.actions.act_window">
        <field name="name">Incidents</field>
        <field name="res_model">parckotech.incident</field>
        <field name="view_mode">kanban,list,form,pivot,graph</field>
    </record>

    <!-- KANBAN -->
    <record id="view_parckotech_incident_kanban" model="ir.ui.view">
        <field name="name">parckotech.incident.kanban</field>
        <field name="model">parckotech.incident</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <span class="o_badge o_badge_primary">[[ record.priority ]]</span>
                            </div>
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div><field name="client_id"/></div>
                                <field name="state"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- LIST -->
    <record id="view_parckotech_incident_list" model="ir.ui.view">
        <field name="name">parckotech.incident.list</field>
        <field name="model">parckotech.incident</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list decoration-success="state in ('resolved','closed')"
                  decoration-danger="state=='cancelled'"
                  decoration-warning="state=='waiting'">
                <field name="name"/>
                <field name="client_id"/>
                <field name="site_id"/>
                <field name="materiel_id"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="technicien_id"/>
                <field name="date_signalement"/>
            </list>
        </field>
    </record>

    <!-- FORM -->
    <record id="view_parckotech_incident_form" model="ir.ui.view">
        <field name="name">parckotech.incident.form</field>
        <field name="model">parckotech.incident</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Incident">
                <sheet>
                    <header>
                        <field name="state" widget="statusbar"
                               options="{'statusbar_visible': ['new','in_progress','waiting','resolved','closed']}"/>
                        <button name="action_in_progress" type="object" string="En cours" class="btn-primary"/>
                        <button name="action_resolved"   type="object" string="Résoudre" class="btn-success"/>
                        <button name="action_close"      type="object" string="Clôturer" class="btn-secondary"/>
                        <button name="action_cancel"     type="object" string="Annuler"  class="btn-danger"/>
                    </header>
                    <group col="4">
                        <field name="name"/>
                        <field name="ref" readonly="1"/>
                        <field name="client_id"/>
                        <field name="site_id"      domain="[('client_id','=',client_id)]"/>
                        <field name="materiel_id"  domain="[('client_id','=',client_id)]"/>
                        <field name="logiciel_id"  domain="[('client_id','=',client_id)]"/>
                        <field name="technicien_id"/>
                        <field name="type"/>
                        <field name="priority"/>
                        <field name="date_signalement" readonly="1"/>
                        <field name="date_echeance"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" nolabel="1"/>
                        </page>
                        <page string="Interventions">
                            <field name="intervention_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
