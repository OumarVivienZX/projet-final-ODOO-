<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ACTION -->
    <record id="action_parckotech_materiel" model="ir.actions.act_window">
        <field name="name">Matériels</field>
        <field name="res_model">parckotech.materiel</field>
        <field name="view_mode">list,form,kanban,graph</field>
    </record>

    <!-- KANBAN VIEW -->
    <record id="view_parckotech_materiel_kanban" model="ir.ui.view">
        <field name="name">parckotech.materiel.kanban</field>
        <field name="model">parckotech.materiel</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" default_group_by="etat">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record">
                            <field name="qr_code" widget="image"
                                   class="o_mini_avatar"
                                   options="{'preview_image':'qr_code'}"/>
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div class="oe_inline"><field name="type_id"/></div>
                                <div><field name="etat"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- LIST VIEW -->
    <record id="view_parckotech_materiel_list" model="ir.ui.view">
        <field name="name">parckotech.materiel.list</field>
        <field name="model">parckotech.materiel</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Matériels"
                  decoration-danger="etat=='out_of_order'"
                  decoration-warning="etat in ('average','bad')">
                <field name="name"/>
                <field name="type_id"/>
                <field name="client_id"/>
                <field name="site_id"/>
                <field name="pack_id"/>
                <field name="numero_serie"/>
                <field name="date_fin_garantie"/>
                <field name="etat"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_parckotech_materiel_form" model="ir.ui.view">
        <field name="name">parckotech.materiel.form</field>
        <field name="model">parckotech.materiel</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Matériel">
                <sheet>
                    <header>
                        <field name="etat" widget="statusbar"/>
                    </header>
                    <group col="4">
                        <field name="name"/>
                        <field name="ref" readonly="1"/>
                        <field name="type_id"/>
                        <field name="numero_serie"/>
                        <field name="pack_id" domain="[('client_id','=',client_id)]"/>
                        <field name="client_id" readonly="1"/>
                        <field name="site_id" readonly="1"/>
                        <field name="marque"/>
                        <field name="modele"/>
                    </group>
                    <group string="Garantie &amp; Amortissement" col="4">
                        <field name="date_achat"/>
                        <field name="duree_garantie"/>
                        <field name="date_fin_garantie" readonly="1"/>
                        <field name="valeur_achat"/>
                        <field name="duree_amortissement"/>
                        <field name="valeur_residuelle" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Incidents">
                            <field name="incident_ids"/>
                        </page>
                        <page string="Interventions">
                            <field name="intervention_ids"/>
                        </page>
                        <page string="Maintenance">
                            <field name="maintenance_plan_ids"/>
                        </page>
                        <page string="Fichiers">
                            <field name="attachment_ids"
                                   widget="many2many_binary"
                                   class="o_form_field oe_inline"/>
                        </page>
                        <page string="Description">
                            <field name="description" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_parckotech_materiel_search" model="ir.ui.view">
        <field name="name">parckotech.materiel.search</field>
        <field name="model">parckotech.materiel</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Recherche matériel">
                <field name="name"/>
                <field name="client_id"/>
                <field name="site_id"/>
                <field name="type_id"/>
                <filter string="Hors garantie" name="out_warranty"
                        domain="[('date_fin_garantie','&lt;', context_today())]"/>
                <group expand="0" string="Groupes">
                    <filter name="group_client" string="Client"
                            context="{'group_by':'client_id'}"/>
                    <filter name="group_type" string="Type"
                            context="{'group_by':'type_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
