<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ACTION -->
    <record id="action_parckotech_intervention" model="ir.actions.act_window">
        <field name="name">Interventions</field>
        <field name="res_model">parckotech.intervention</field>
        <field name="view_mode">list,form,calendar,graph</field>
    </record>

    <!-- LIST VIEW -->
    <record id="view_parckotech_intervention_list" model="ir.ui.view">
        <field name="name">parckotech.intervention.list</field>
        <field name="model">parckotech.intervention</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Interventions">
                <field name="name"/>
                <field name="incident_id"/>
                <field name="technicien_id"/>
                <field name="client_id"/>
                <field name="site_id"/>
                <field name="date_debut"/>
                <field name="date_fin"/>
                <field name="duree"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_parckotech_intervention_form" model="ir.ui.view">
        <field name="name">parckotech.intervention.form</field>
        <field name="model">parckotech.intervention</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Intervention">
                <sheet>
                    <header>
                        <field name="state" widget="statusbar"
                               options="{'statusbar_visible': ['draft','planned','in_progress','done','cancelled']}"/>
                        <button name="action_start" type="object" string="Démarrer" class="btn-primary"/>
                        <button name="action_done"  type="object" string="Terminer" class="btn-success"/>
                        <button name="action_cancel" type="object" string="Annuler"  class="btn-danger"/>
                    </header>
                    <group col="4">
                        <field name="incident_id"/>
                        <field name="technicien_id"/>
                        <field name="client_id" readonly="1"/>
                        <field name="site_id"   readonly="1"/>
                        <field name="date_debut"/>
                        <field name="date_fin"/>
                        <field name="duree" readonly="1"/>
                        <field name="facturable"/>
                        <field name="validation"/>
                    </group>
                    <notebook>
                        <page string="Compte-rendu">
                            <field name="compte_rendu" nolabel="1"/>
                        </page>
                        <page string="Pièces utilisées">
                            <field name="piece_ids"/>
                        </page>
                        <page string="Signature">
                            <field name="signature_client" widget="signature"/>
                            <field name="signature_date"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- CALENDAR VIEW -->
    <record id="view_parckotech_intervention_calendar" model="ir.ui.view">
        <field name="name">parckotech.intervention.calendar</field>
        <field name="model">parckotech.intervention</field>
        <field name="type">calendar</field>
        <field name="arch" type="xml">
            <calendar string="Planning interventions"
                      date_start="date_debut"
                      date_stop="date_fin"
                      color="technicien_id">
                <field name="name"/>
            </calendar>
        </field>
    </record>
</odoo>
