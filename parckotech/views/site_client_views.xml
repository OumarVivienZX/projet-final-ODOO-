<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ACTION -->
    <record id="action_parckotech_site_client" model="ir.actions.act_window">
        <field name="name">Sites clients</field>
        <field name="res_model">parckotech.site.client</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- LIST VIEW -->
    <record id="view_parckotech_site_client_list" model="ir.ui.view">
        <field name="name">parckotech.site.client.list</field>
        <field name="model">parckotech.site.client</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Sites">
                <field name="name"/>
                <field name="client_id"/>
                <field name="parent_id"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_parckotech_site_client_form" model="ir.ui.view">
        <field name="name">parckotech.site.client.form</field>
        <field name="model">parckotech.site.client</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Site client">
                <sheet>
                    <group col="4">
                        <field name="name"/>
                        <field name="client_id"/>
                        <field name="parent_id"/>
                    </group>
                    <notebook>
                        <page string="Sous-sites">
                            <field name="child_ids">
                                <list string="Sites secondaires">
                                    <field name="name"/>
                                    <field name="client_id"/>
                                </list>
                                <form string="Site secondaire">
                                    <sheet>
                                        <group col="2">
                                            <field name="name"/>
                                            <field name="client_id"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
