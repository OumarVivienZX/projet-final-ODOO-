<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- ACTION -->
  <record id="action_parckotech_logiciel" model="ir.actions.act_window">
    <field name="name">Logiciels</field>
    <field name="res_model">parckotech.logiciel</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- LIST -->
  <record id="view_parckotech_logiciel_list" model="ir.ui.view">
    <field name="name">parckotech.logiciel.list</field>
    <field name="model">parckotech.logiciel</field>
    <field name="arch" type="xml">
      <list string="Logiciels">
        <field name="name"/>
        <field name="version"/>
        <field name="license_key"/>
        <field name="client_id"/>
        <field name="pack_id"/>
        <field name="licence_count"/>
      </list>
    </field>
  </record>

  <!-- FORM -->
  <record id="view_parckotech_logiciel_form" model="ir.ui.view">
    <field name="name">parckotech.logiciel.form</field>
    <field name="model">parckotech.logiciel</field>
    <field name="arch" type="xml">
      <form string="Logiciel">
        <sheet>
          <group col="4">
            <field name="name"/>
            <field name="version"/>
            <field name="editeur"/>
            <field name="license_key"/>
            <field name="pack_id"/>
            <field name="client_id" readonly="1"/>
            <field name="site_id" readonly="1"/>
          </group>
          <notebook>
            <page string="Licences">
              <field name="licence_ids"/>
            </page>
            <page string="Matériels">
              <field name="materiel_ids" widget="many2many_tags"
                     options="{'no_create': True}"/>
            </page>
            <page string="Pièces jointes">
              <field name="attachment_ids" widget="many2many_binary"/>
            </page>
            <page string="Description">
              <field name="description" nolabel="1"/>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
