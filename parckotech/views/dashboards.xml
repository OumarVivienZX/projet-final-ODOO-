<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action Dashboards -->
    <record id="action_parckotech_admin_dashboard" model="ir.actions.act_window">
        <field name="name">Tableau de bord – Admin</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{"default_name": "Dashboard ParckoTech"}</field>
    </record>

    <menuitem id="menu_parckotech_dashboard" name="Dashboard" parent="menu_parckotech_root" action="action_parckotech_admin_dashboard" sequence="0"/>

    <!-- Board view -->
    <record id="view_parckotech_admin_board" model="ir.ui.view">
        <field name="name">parckotech.admin.board</field>
        <field name="model">board.board</field>
        <field name="arch" type="xml">
            <form string="Dashboard ParckoTech">
                <board style="2-2">
                    <column>
                        <action action="action_parckotech_incident" string="Incidents par statut"/>
                        <action action="action_parckotech_alertes" string="Alertes"/>
                    </column>
                    <column>
                        <action action="action_parckotech_facture_contrat" string="Factures en attente"/>
                        <action action="action_parckotech_materiel" string="Matériels hors garantie"/>
                    </column>
                </board>
            </form>
        </field>
    </record>
</odoo>
