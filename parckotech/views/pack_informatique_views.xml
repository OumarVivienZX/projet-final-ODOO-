<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ACTION -->
    <record id="action_parckotech_pack_informatique" model="ir.actions.act_window">
        <field name="name">Packs informatiques</field>
        <field name="res_model">parckotech.pack.informatique</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre premier pack informatique
            </p>
        </field>
    </record>

    <!-- LIST VIEW -->
    <record id="view_parckotech_pack_informatique_list" model="ir.ui.view">
        <field name="name">parckotech.pack.informatique.list</field>
        <field name="model">parckotech.pack.informatique</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Packs informatiques" create="1" edit="1">
                <field name="name"/>
                <field name="client_id"/>
                <field name="site_id"/>
                <field name="date_mise_service"/>
                <field name="state" widget="statusbar"/>
                <field name="materiel_count"/>
                <field name="logiciel_count"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_parckotech_pack_informatique_form" model="ir.ui.view">
        <field name="name">parckotech.pack.informatique.form</field>
        <field name="model">parckotech.pack.informatique</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Pack Informatique">
                <sheet>
                    <header>
                        <button name="action_active" type="object" string="Activer" class="btn-primary"/>
                        <button name="action_maintenance" type="object" string="Maintenance" class="btn-icon-warning"/>
                        <button name="action_suspend" type="object" string="Suspendre" class="btn-secondary"/>
                        <button name="action_terminate" type="object" string="Résilier" class="btn-danger"/>
                        <button name="action_draft" type="object" string="Réactiver brouillon"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <group col="4">
                        <field name="name"/>
                        <field name="ref" readonly="1"/>
                        <field name="client_id"/>
                        <field name="site_id" domain="[('client_id','=',client_id)]"/>
                        <field name="date_mise_service"/>
                    </group>
                    <notebook>
                        <page string="Matériels" name="materiel">
                            <field name="materiel_ids" mode="kanban">
                                <kanban class="o_kanban_small_column" default_group_by="type_id">
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click o_kanban_record">
                                                <field name="name" class="oe_kanban_text_inline"/>
                                                <div><strong><field name="type_id"/></strong></div>
                                                <field name="etat"/>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string="Logiciels" name="logiciels">
                            <field name="logiciel_ids"/>
                        </page>
                        <page string="Contrats" name="contrats">
                            <field name="contrat_ids"/>
                        </page>
                        <page string="Notes">
                            <field name="notes" nolabel="1" class="oe_inline"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_parckotech_pack_informatique_search" model="ir.ui.view">
        <field name="name">parckotech.pack.informatique.search</field>
        <field name="model">parckotech.pack.informatique</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Recherche packs">
                <field name="name"/>
                <field name="client_id"
                       filter_domain="['|',('client_id','ilike',self),('site_id','ilike',self)]"/>
                <filter string="Actifs" name="actif"
                        domain="[('state','=','active')]"/>
                <group expand="0" string="Groupes">
                    <filter string="Client" name="group_client"
                            context="{'group_by':'client_id'}"/>
                    <filter string="Statut" name="group_state"
                            context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
