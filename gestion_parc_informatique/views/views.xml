<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vues pour Client -->
    <record id="view_client_tree" model="ir.ui.view">
        <field name="name">client.tree</field>
        <field name="model">gestion_parc.client</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="contact"/>
                <field name="address"/>
            </list>
        </field>
    </record>

    <record id="view_client_form" model="ir.ui.view">
        <field name="name">client.form</field>
        <field name="model">gestion_parc.client</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="contact"/>
                        <field name="address"/>
                    </group>
                    <notebook>
                        <page string="Contrats">
                            <field name="contrat_ids"/>
                        </page>
                        <page string="Équipements">
                            <field name="equipement_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_client" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">gestion_parc.client</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Vues pour Contrat_Infogérance -->
    <record id="view_contrat_tree" model="ir.ui.view">
        <field name="name">contrat_infogerance.tree</field>
        <field name="model">gestion_parc.contrat_infogerance</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="client_id"/>
                <field name="date_debut"/>
                <field name="date_fin"/>
                <field name="frequence_facturation"/>
            </list>
        </field>
    </record>

    <record id="view_contrat_form" model="ir.ui.view">
        <field name="name">contrat_infogerance.form</field>
        <field name="model">gestion_parc.contrat_infogerance</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="client_id"/>
                        <field name="date_debut"/>
                        <field name="date_fin"/>
                        <field name="frequence_facturation"/>
                    </group>
                    <notebook>
                        <page string="Factures">
                            <field name="facture_ids"/>
                        </page>
                        <page string="Équipements">
                            <field name="equipement_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_contrat" model="ir.actions.act_window">
        <field name="name">Contrats d'Infogérance</field>
        <field name="res_model">gestion_parc.contrat_infogerance</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Vues pour Équipements -->
    <record id="view_equipement_tree" model="ir.ui.view">
        <field name="name">equipements.tree</field>
        <field name="model">gestion_parc.equipements</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="client_id"/>
                <field name="id_materiel"/>
                <field name="type_de_materiel"/>
                <field name="marque"/>
                <field name="statut_materiel"/>
                <field name="date_acquisition"/>
                <field name="fin_de_garantie"/>
            </list>
        </field>
    </record>

    <record id="view_equipement_form" model="ir.ui.view">
        <field name="name">equipements.form</field>
        <field name="model">gestion_parc.equipements</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="client_id"/>
                        <field name="id_materiel"/>
                        <field name="type_de_materiel"/>
                        <field name="marque"/>
                        <field name="statut_materiel"/>
                        <field name="date_acquisition"/>
                        <field name="fin_de_garantie"/>
                    </group>
                    <notebook>
                        <page string="Tickets">
                            <field name="ticket_ids"/>
                        </page>
                        <page string="Contrats">
                            <field name="contrat_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_equipement" model="ir.actions.act_window">
        <field name="name">Équipements</field>
        <field name="res_model">gestion_parc.equipements</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Vues pour Ticket -->
    <record id="view_ticket_tree" model="ir.ui.view">
        <field name="name">ticket.tree</field>
        <field name="model">gestion_parc.ticket</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="equipement_id"/>
                <field name="id_ticket"/>
                <field name="description"/>
                <field name="statut"/>
                <field name="date_creation"/>
            </list>
        </field>
    </record>

    <record id="view_ticket_form" model="ir.ui.view">
        <field name="name">ticket.form</field>
        <field name="model">gestion_parc.ticket</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="equipement_id"/>
                        <field name="id_ticket"/>
                        <field name="description"/>
                        <field name="statut"/>
                        <field name="date_creation"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ticket" model="ir.actions.act_window">
        <field name="name">Tickets</field>
        <field name="res_model">gestion_parc.ticket</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Vues pour Facture -->
    <record id="view_facture_tree" model="ir.ui.view">
        <field name="name">facture.tree</field>
        <field name="model">gestion_parc.facture</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="contrat_id"/>
                <field name="id_facture"/>
                <field name="montant"/>
                <field name="date_emission"/>
            </list>
        </field>
    </record>

    <record id="view_facture_form" model="ir.ui.view">
        <field name="name">facture.form</field>
        <field name="model">gestion_parc.facture</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="contrat_id"/>
                        <field name="id_facture"/>
                        <field name="montant"/>
                        <field name="date_emission"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_facture" model="ir.actions.act_window">
        <field name="name">Factures</field>
        <field name="res_model">gestion_parc.facture</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Principal -->
    <menuitem id="menu_gestion_parc_root"
              name="Gestion Parc Informatique"
              sequence="10"/>
    <menuitem id="menu_client"
              name="Clients"
              action="action_client"
              parent="menu_gestion_parc_root"
              sequence="10"/>
    <menuitem id="menu_contrat"
              name="Contrats"
              action="action_contrat"
              parent="menu_gestion_parc_root"
              sequence="20"/>
    <menuitem id="menu_equipement"
              name="Équipements"
              action="action_equipement"
              parent="menu_gestion_parc_root"
              sequence="30"/>
    <menuitem id="menu_ticket"
              name="Tickets"
              action="action_ticket"
              parent="menu_gestion_parc_root"
              sequence="40"/>
    <menuitem id="menu_facture"
              name="Factures"
              action="action_facture"
              parent="menu_gestion_parc_root"
              sequence="50"/>
</odoo>